<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chart="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Contenuto scrollabile -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <!-- Pannello di controllo parametri -->
            <LinearLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Window length -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Window (s)"
                        android:textSize="10sp"
                        android:textColor="#333333"/>

                    <EditText
                        android:id="@+id/etWindow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="4.0"/>
                </LinearLayout>

                <!-- Sub-window length -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sub-window (s)"
                        android:textSize="10sp"
                        android:textColor="#333333"/>

                    <EditText
                        android:id="@+id/etSubWindow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="2.0"/>
                </LinearLayout>

                <!-- Overlap fraction -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Overlap (0â€“1)"
                        android:textSize="10sp"
                        android:textColor="#333333"/>

                    <EditText
                        android:id="@+id/etOverlap"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal"
                        android:hint="0.50"/>
                </LinearLayout>

                <Button
                    android:id="@+id/btnApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Apply"/>
            </LinearLayout>

            <!-- Grafico Welch -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartWelch"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"/>

            <!-- Grafico FFT -->
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartFFT"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"/>

            <!-- Risultato testuale -->
            <TextView
                android:id="@+id/resultTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:textColor="#000"
                android:textSize="16sp"/>

            <!-- Nota parametri -->
            <TextView
                android:id="@+id/noteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="8dp"
                android:textColor="#555555"
                android:textSize="10sp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Progress indicator in overlay -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminate="true"
        android:visibility="gone"
        android:layout_gravity="center"/>
</FrameLayout>